@page "/"
@inject IJSRuntime JsRuntime

<PageTitle>Index</PageTitle>



<section class="home-banner">
    <div class="banner p-lg-3 px-lg-5">
        <div class="row">
            <div class="col-lg-6 banner-container">
                <div class="banner-inner">
                    <h3>Calzado 100% ecuatoriano</h3>
                    <p class="fw-bold">Apoyando al pequeño productor</p>
                    <a href="/" class="btn btn-primary text-white px-4 py-2 fw-bold text-uppercase">Comprar ahora</a>
                </div>
            </div>
            <div class="col-lg-6 banner-image">
                <img src="/images/shoes.png" alt="" />
            </div>
        </div>
    </div>
</section>

<div class="container popular-products-categories section">
    <h3 class="title">Categorías</h3>
    <ul>
        <li class="btn active">
            Hombres <span>/</span>
        </li>
        <li class="btn">
            Mujeres <span>/</span>
        </li>
    </ul>
    <div class="container my-5">
        <div class="row gy-5 popular-products-grid">
            <div class="col-lg-4 col-md-6 item">
                <div class="card shadow">
                    <div class="product-image">
                        <img class="img-fluid" src="" alt="" />
                    </div>
                    <div class="d-flex justify-content-between px-3">
                        <small class="m-0">Categoría <span>Hombres</span></small>
                    </div>
                    <div class="product-details my-2 d-flex justify-content-between px-3">
                        <p class="m-0 fw-bold">
                            texto aqui
                        </p>
                        <h6>$$$</h6>
                    </div>
                    <hr class="m-0" />
                    <div class="d-flex justify-content-evenly p-3">
                        <button class="btn bg-none">
                            <i class="bi bi-cart-plus-fill" style="font-size:2rem"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool ShowSidebarMenu = true;

    private string? SideMenuCss => ShowSidebarMenu ? "" : "";
}
